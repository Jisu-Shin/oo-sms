{{>layout/home-header}}

<div class="container my-5">
    {{>layout/bodyheader}}

    <div class="card p-4 shadow-sm border-0">
        <h5 class="card-title fw-bold text-center mb-4">고객 목록</h5>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                <tr>
                    <th scope="col">번호</th>
                    <th scope="col">이름</th>
                    <th scope="col">전화번호</th>
                    <th scope="col">SMS 수신 동의 유형</th>
                </tr>
                </thead>
                <tbody id="tbody">
                {{#custs}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td>{{phoneNumber}}</td>
                        <td>{{consentType}}</td>
                    </tr>
                {{/custs}}
                </tbody>
            </table>
        </div>
    </div>

    {{>layout/bodyfooter}}
</div>

{{>layout/footer}}