{{>layout/home-header}}

<div class="container my-5">
    {{>layout/bodyheader}}

    <div class="card p-4 shadow-sm border-0">
        <h5 class="card-title fw-bold text-center mb-4 text-dark">공연 목록</h5>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                <tr>
                    <th scope="col">번호</th>
                    <th scope="col">이름</th>
                    <th scope="col">가격</th>
                    <th scope="col">재고수량</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody id="tbody">
                {{#items}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td>{{price}}</td>
                        <td>{{stockQuantity}}</td>
                        <td>
                            <a href="/items/{{id}}" role="button" class="btn btn-sm btn-outline-primary">수정</a>
                        </td>
                    </tr>
                {{/items}}
                </tbody>
            </table>
        </div>
    </div>

    {{>layout/bodyfooter}}
</div>

{{>layout/footer}}