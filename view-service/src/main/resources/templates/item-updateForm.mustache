{{>layout/home-header}}

<div class="container my-5">
    {{>layout/bodyheader}}

    {{#item}}
        <div class="card p-4 shadow-sm border-0">
            <h2 class="card-title text-center mb-4 fw-bold text-dark">공연 정보 수정</h2>

            <form action="/items/{{id}}" method="post">
                <div class="mb-3">
                    <label for="id" class="form-label">ID</label>
                    <input type="text" class="form-control-plaintext fw-bold" id="id" name="id" value="{{id}}" readonly>
                </div>

                <div class="mb-3">
                    <label for="name" class="form-label">콘서트명</label>
                    <input type="text" class="form-control" placeholder="콘서트명을 입력하세요" id="name" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">가격</label>
                    <input type="text" class="form-control" placeholder="가격을 입력하세요" id="price" name="price" value="{{price}}">
                </div>

                <div class="mb-4">
                    <label for="stockQuantity" class="form-label">수량</label>
                    <input type="number" class="form-control" placeholder="수량을 입력하세요" id="stockQuantity" name="stockQuantity" value="{{stockQuantity}}">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark btn-lg fw-bold">수정하기</button>
                </div>
            </form>
        </div>
    {{/item}}
    <br/>

    {{>layout/bodyfooter}}
</div> {{>layout/footer}}