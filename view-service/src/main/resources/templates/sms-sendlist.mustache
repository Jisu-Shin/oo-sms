{{>layout/home-header}}

<div class="container my-5">
    {{>layout/bodyheader}}

    <div class="card p-4 shadow-sm border-0">
        <h5 class="card-title fw-bold text-center text-warning mb-4">문자 발송 내역</h5>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">고객명</th>
                    <th scope="col">전화번호</th>
                    <th scope="col">메시지 내용</th>
                    <th scope="col">발송일시</th>
                    <th scope="col">발송 결과</th>
                </tr>
                </thead>
                <tbody id="tbody">
                {{#sms}}
                    <tr>
                        <td>{{smsId}}</td>
                        <td></td>
                        <td>{{sendPhoneNumber}}</td>
                        <td>{{smsContent}}</td>
                        <td>{{sendDt}}</td>
                        <td>{{smsResult}}</td>
                    </tr>
                {{/sms}}
                </tbody>
            </table>
        </div>
    </div>

    {{>layout/bodyfooter}}
</div> {{>layout/footer}}